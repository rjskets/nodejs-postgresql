packages:
  yum:
    epel-release: []
    certbot: []

commands:
  01_get_cert:
    command: "certbot certonly --nginx --non-interactive --agree-tos -m your-email@example.com -d sample-app-env.eba-qxkutmqj.ap-south-1.elasticbeanstalk.com"
  02_setup_cron:
    command: "echo '0 12 * * * /usr/bin/certbot renew --quiet' | crontab -"

files:
  "/etc/nginx/conf.d/ssl.conf":
    mode: "000644"
    owner: root
    group: root
    content: |
      server {
          listen 443 ssl;
          server_name sample-app-env.eba-qxkutmqj.ap-south-1.elasticbeanstalk.com;

          ssl_certificate /etc/letsencrypt/live/sample-app-env.eba-qxkutmqj.ap-south-1.elasticbeanstalk.com/fullchain.pem;
          ssl_certificate_key /etc/letsencrypt/live/sample-app-env.eba-qxkutmqj.ap-south-1.elasticbeanstalk.com/privkey.pem;

          location / {
              proxy_pass http://localhost:8080;
              proxy_set_header Host $host;
              proxy_set_header X-Real-IP $remote_addr;
              proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
              proxy_set_header X-Forwarded-Proto $scheme;
          }
      }

      server {
          listen 80;
          server_name sample-app-env.eba-qxkutmqj.ap-south-1.elasticbeanstalk.com;
          return 301 https://$host$request_uri;
      }
